@import "./variable.styl"

.swiper-container .dots
  position: absolute
  left: 0
  right: 12px
  bottom: 10px
  display: flex
  justify-content: center

.swiper-container .dots .dot
  width: 5px
  height: 5px
  margin: 0 2.5px
  border-radius: 50%
  transition: all .6s

.swiper-container .dots .dot.active
  width: 12.5px

.full-image
  width: 100%
  height: 100%

.line-title
  position: relative
  text-align: center
  font-size: $font-size-large

//ktv
.ktv
  color: $color-ktv-theme !important
  border: 0.5px solid $color-ktv-theme !important

.ktv-bg
  background: $color-ktv-theme !important
  opacity: 1

.ktv-text
  color: $color-ktv-theme !important

.ktv-border
  &:before
    content: ''
    width: 30px
    height: 2px
    position: absolute
    left: 50%
    transform: translateX(-50%)
    bottom: 0px
    background: $color-ktv-theme !important

.ktv-coupon
  width: 3.35px
  height: 100%
  position: absolute
  left: 0
  top: 0px
  background: $color-ktv-theme
  border-radius: 2px 0 0 2px

.line-ktv
  position: relative
  &:before
    position: absolute
    left: 0
    col-center()
    width: 2px
    height: 14px
    content: ''
    background: $color-ktv-theme !important

.ktv-opacity
  color: $color-ktv-theme !important
  background: $color-ktv-opacity !important

.ktv-opacity-20
  color: $color-ktv-theme !important
  background: $color-ktv-opacity-20 !important
